{
  "name": "emotional-diary-backend",
  "version": "1.0.0",
  "description": "Backend del diario emocional",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test mocha \"test/**/*.test.js\"",
    "test:coverage": "nyc mocha \"test/**/*.test.js\"",
    "coverage": "npm run test:coverage",
    "coverage:report": "nyc report --reporter=html",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "test:connection": "node test-connection.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "chai": "^5.2.0",
    "cross-env": "^7.0.3",
    "mocha": "^11.7.1",
    "nodemon": "^3.0.2",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.0",
    "sqlite3": "^5.1.7"
  },
  "nyc": {
    "all": true,
    "include": [
      "controllers/**/*.js",
      "services/**/*.js"
    ],
    "exclude": [
      "test/**",
      "config/**",
      "node_modules/**"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  },
  "author": "Andr√©s Brito",
  "license": "MIT"
}
